<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="200dp"
            android:background="@color/White">


            <ImageView
                android:id="@+id/home_navigation_profile_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/home_navigation_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_navigation_profile_picture"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/home_navigation_profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_navigation_profile_name"
                android:layout_marginTop="@dimen/space5dp"
                android:gravity="center"
                android:textColor="@color/newblack"
                android:textSize="16sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_navigation_wishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/space5dp"
                android:padding="@dimen/space10dp"
                android:text="My Wishlist"
                android:textColor="@color/newblack"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/home_navigation_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"

                android:layout_marginStart="10dp"
                android:padding="@dimen/space10dp"
                android:text="@string/recently_released"
                android:textColor="@color/newblack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_navigation_top100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:padding="@dimen/space10dp"
                android:text="Top 50"
                android:textColor="@color/newblack"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginEnd="@dimen/space60dp"
                android:layout_marginStart="@dimen/space60dp"
                android:background="@color/White" />

            <TextView
                android:id="@+id/home_navigation_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"

                android:layout_marginStart="10dp"
                android:padding="@dimen/space10dp"
                android:text="Choose Platform"
                android:textColor="@color/newblack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_navigation_About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:padding="@dimen/space10dp"
                android:text="About us"
                android:textColor="@color/newblack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_navigation_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:padding="@dimen/space10dp"
                android:text="Credits"
                android:textColor="@color/newblack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_navigation_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:padding="@dimen/space10dp"
                android:text="@string/logout"
                android:textColor="@color/choose1"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>